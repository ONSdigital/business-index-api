{
  "settings": {
    "index": {
      "analysis": {
        "analyzer": {
          "synonym": {
            "tokenizer": "standard",
            "filter": ["synonym", "uppercase"],
            "char_filter" : ["my_char_filter"]
          }
        },
        "filter" : {
          "synonym" : {
            "type" : "synonym",
            "synonyms" : [
              "ltd, limited",
              "bros, brothers",
              "public limited company=>plc",
              "community interest company=>cic",
              "right to enfranchisement=>rte",
              "right to manage=>rtm",
              "european enonomic interest grouping=>eeig",
              "limited partnership=>lp",
              "Cwmni Cyfyngedig Cyhoeddus=>ccc",
              "Cwmni Buddiant Cymunedol=>cbc",
              "Partneriaeth Cyfyngedig=>pc",
              "Partneriaeth Atebolrwydd Cyfyngedig=>pac",
              "Sefydliad Elusennol Corfforedig=>sec",
              "limited liability partnership=>llp"
            ],
            "ignore_case" : true
          },
          "stemmer" : {
            "type" : "stemmer",
            "name" : "possessive_english"
          }
        },
        "char_filter" : {
          "my_char_filter" : {
            "type" : "mapping",
            "mappings" : [
              ".=>",
              ",=>",
              "(=>",
              ")=>",
              "[=>",
              "]=>",
              "{=>",
              "}=>",
              "!=>",
              "?=>",
              "/=>",
              "!=>",
              "@=>",
              "$=>",
              "£=>",
              "%=>",
              "~=>",
              "^=>",
              "€=>",
              "#=>",
              "-=>",
              "_=>",
              ":=>",
              ";=>",
              "*=>",
              "\\u0091=>",
              "\\u0092=>",
              "\\u2018=>",
              "\\u2019=>",
              "\\u201B=>",
              "\\u0022=>",
              "\\u201C=>",
              "\\u201D=>"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "bi" : {
      "properties" : {
        "ID" : {
          "type" : "string"
        },
        "BusinessName" : {
          "type" : "string",
          "analyzer":"synonym"
        },
        "UBRN" : {
          "type" : "string"
        },
        "IndustryCode" : {
          "type" : "long"
        },
        "LegalStatus" : {
          "type" : "string",
          "index": "not_analyzed"
        },
        "TradingStatus" : {
          "type" : "string",
          "index": "not_analyzed"
        },
        "Turnover" : {
          "type" : "string",
          "index": "not_analyzed"
        },
        "EmploymentBands" : {
          "type" : "string",
          "index": "not_analyzed"
        },
        "PostCode" : {
          "type" : "string"
        },
        "VatRefs" : {
          "type" : "string"
        },
        "PayeRefs" : {
          "type" : "string"
        },
        "CompanyNo" : {
          "type" : "string"
        }
      }
    }
  }
}