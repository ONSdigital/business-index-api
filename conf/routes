# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Get Business by id
GET     /v1/business/$id<\d{8,16}>       controllers.v1.SearchController.searchBusinessById(id: Long)
GET     /v1/business/:id                 controllers.v1.SearchController.badRequest(id)

GET     /v1/search             controllers.v1.SearchController.searchBusiness(term: Option[String] ?= None)
GET     /v1/search/:term       controllers.v1.SearchController.searchTerm(term)

# Route for deployed version information (in JSON).
GET     /version               controllers.VersionController.version

# Route for health check information (in JSON).
GET     /                       controllers.HomeController.health
GET     /health                 controllers.HomeController.health

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file          controllers.WebJarAssets.at(file)

# Swagger API
GET   /swagger.json             controllers.ApiHelpController.getResources
GET   /docs                     controllers.HomeController.swagger

# CORS
OPTIONS /*all                   controllers.HomeController.preflight(all: String)